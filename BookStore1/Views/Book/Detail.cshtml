@model Book

<div class="container">

    <div class="container">

       
        <h1 class="my-4">
            
            <small>@Model.Title</small>
        </h1>

   
        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid" src="@Model.Image" alt="">
            </div>

            <div class="col-md-4">
                <h3 class="my-3">Autor: @Model.Author</h3>
               
                <h3 class="my-3">Price: @Model.Price</h3>
               
            </div>

        </div>
       

    </div>
   
</div>

